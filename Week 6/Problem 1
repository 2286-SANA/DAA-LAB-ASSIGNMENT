#include <iostream>
#include <queue>
#include <vector>
using namespace std;

struct Edge {
    int src, dest;
};
 
class Graph
{
public:
    vector<vector<int>> adjList;
 
    // Graph Constructor
    Graph(vector<Edge> const &edges, int N)
    {
        // resize the vector to hold `N` elements each of type `vector<int>`
        adjList.resize(N);
 
        // add edges to the directed graph
        for (auto &edge: edges) {
            adjList[edge.src].push_back(edge.dest);
        }
    }
};
bool isConnected(Graph const &graph, int src, int dest,
                vector<bool> &discovered)
{
    // create a queue for doing BFS
    queue<int> q;
    discovered[src] = true;
 
    q.push(src);
 
   
    while (!q.empty())
    {
     
        int v = q.front();
        q.pop();
 
     
        if (v == dest) {
            return true;
        }
 
      
        for (int u: graph.adjList[v])
        {
            if (!discovered[u])
            {
                // mark it as discovered and enqueue it
                discovered[u] = true;
                q.push(u);
            }
        }
    }
 
    return false;
}
 
int main()
{
    vector<Edge> edges = {
        {0, 3}, {1, 0}, {1, 2}, {1, 4}, {2, 7}, {3, 4},
        {3, 5}, {4, 3}, {4, 6}, {5, 6}, {6, 7}
    };
    int N = 8;
 
    // build a graph from the given edges
    Graph graph(edges, N);
 
    vector<bool> discovered(N);

    int src = 0, dest = 7;

    if (isConnected(graph, src, dest, discovered)) {
        cout << "Yes path exists  " ;
    }
    else {
        cout << "No path exists between vertices " ;
    }
 
    return 0;
}

